---

<body class="h-screen overflow-y-auto md:overflow-hidden">
  <Layout>
    <div class="bg-custom-cream min-h-screen">
      <!-- Header - Shared between mobile and desktop -->
      <div class="flex flex-col h-full overflow-hidden">
        <NavBar />
        
        <!-- Gallery title for mobile only -->
        <div class="md:hidden px-4">
          <h2 class="font-heading mb-4">Gallery</h2>
        </div>
        
        <!-- Ensure proper scrolling for the content area -->
        <div class="flex-1 overflow-y-auto md:overflow-hidden md:h-full">
          <!-- Horizontal scrolling container for desktop -->
          <div class="h-full md:overflow-x-auto">
            <!-- Fixed-width grid for desktop -->
            <div class="grid grid-cols-1 md:grid-cols-8 gap-8 p-4 md:pl-10 md:pr-0 h-full pb-16 md:w-[3600px]">
              
              <!-- Gallery intro column (first column on desktop, stacked on mobile) -->
              <div class="md:overflow-y-auto md:pr-2 md:h-[calc(100vh-150px)]">
                <h2 class="font-heading pb-2">Photography</h2>
                <p class="pb-4">Gallery</p>
                
                <div class="space-y-6">
                  <!-- Intro content if needed -->
                </div>
              </div>
              
              {/* Photo Series Columns - responsive layout */}
              {photoSeries.map(series => (
                <div class="mt-8 md:mt-0 md:overflow-y-auto md:pr-2 md:h-[calc(100vh-150px)] md:pb-8">
                  <h2 class="font-heading pb-2">{series.title}</h2>
                  <p class="pb-4">{series.description}</p>
                  
                  <div class="space-y-6">
                    {series.photos.map(photo => (
                      <div>
                        <img 
                          src={photo.src} 
                          alt={photo.alt} 
                          class="w-full max-h-[70vh] object-contain mb-2"
                        />
                        {photo.caption && 
                          <p class="text-sm italic pt-1">{photo.caption}</p>
                        }
                      </div>
                    ))}
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </Layout>
</body> 